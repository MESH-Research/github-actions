{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "rootDir": "./src",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "/src/*": ["./*"],
      "/commands/*": ["./commands/*"],
      "/lib/*": ["./lib/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "test/**", "node_modules", "dist"]
}
